 <%= render 'shared/header' %>
	
	  
   
<p id="notice"><%= notice %></p>
<style>
table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #ddd;
}

tr:hover{background-color:#f5f5f5}
</style>
<h1>Hive Categories</h1>

<table>
  <thead>
    <tr >
      <th>Category ID</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hive_categories.each do |hive_category| %>
      <tr>
        <td><%= hive_category.cat_id %></td>
        <td><%= hive_category.name %></td>
        <td><%= hive_category.description %></td>
        <td><%= link_to 'Show', hive_category %></td>
        <td><%= link_to 'Edit', edit_hive_category_path(hive_category) %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<% if current_user.is_admin == true %><h1>New Hive Category</h1>

<%= render 'form', hive_category: @hive_category %>

 
<%else%>


  <%= link_to "UNAUTHORIZE ACCESS", hive_informations_path %> <br>
  
<%end%>